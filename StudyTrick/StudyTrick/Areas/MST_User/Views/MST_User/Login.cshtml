@{
    ViewData["Title"] = "Admin Login";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

@model StudyTrick.Areas.MST_User.Models.MST_UserModel

<div class="auth-page d-flex align-items-center justify-content-center vh-100">
    <div class="card shadow-lg border-0 rounded p-4" style="max-width: 400px; width: 100%;">
        <div class="card-body">
            <div class="text-center mb-4">
                <h3 class="fw-bold">Study Trick</h3>
                <p class="text-muted">Sign in to continue</p>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@Html.Raw(TempData["Error"])</div>
            }

            <form method="post" asp-area="MST_User" asp-controller="MST_User" asp-action="Login">
                <div class="mb-3">
                    <label for="UserName" class="form-label">Username</label>
                    <input asp-for="UserName" type="text" class="form-control" placeholder="Enter your username">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3 position-relative">
                    <label for="Password" class="form-label">Password</label>
                    <div class="input-group">
                        <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Enter your password">
                        <button type="button" class="btn btn-outline-secondary" id="togglePassword">
                            <i class="mdi mdi-eye-off"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button class="btn btn-primary w-100" type="submit">Log In</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("togglePassword").addEventListener("click", function () {
            var passwordInput = document.getElementById("password");
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                this.innerHTML = '<i class="mdi mdi-eye"></i>';
            } else {
                passwordInput.type = "password";
                this.innerHTML = '<i class="mdi mdi-eye-off"></i>';
            }
        });
    </script>
}
